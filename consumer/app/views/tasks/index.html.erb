<h1>Listing tasks</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th cellspacing="50">Start Time</th>
      <th cellspacing="50">End Time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.name %></td>
        <td cellspacing="50"><%= task.start_time.strftime("%d/%m/%Y %H:%M") %></td>
        <td cellspacing="50"><%= task.end_time.strftime("%d/%m/%Y %H:%M") %></td>
        <td><%= link_to 'Show', task %></td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Task', new_task_path %>
